<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- 🎯 Console appender estruturado com trace_id/span_id -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Formato simples, fácil de ingerir pelo Datadog (ou troque por JSON se preferir) -->
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %-5level [%thread] %logger{36} - %msg trace_id=%X{dd.trace_id:-0} span_id=%X{dd.span_id:-0}%n</pattern>
        </encoder>
    </appender>

    <!-- 🔊 Níveis -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- 🐘 Menos ruído de frameworks -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.apache.kafka" level="INFO"/>
    <logger name="org.hibernate.SQL" level="WARN"/>
</configuration>
