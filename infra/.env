# ======================================
# üîß Ambiente de desenvolvimento
# ======================================
SPRING_PROFILES_ACTIVE=dev
JAVA_OPTS="-Xms256m -Xmx512m"

# ======================================
# üêò Banco de dados
# ======================================
DB_NAME=contas_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_PORT=5432
DB_URL=jdbc:postgresql://postgres-db:${DB_PORT}/${DB_NAME}

# ======================================
# ‚öôÔ∏è Kafka/Zookeeper
# ======================================
ZOOKEEPER_PORT=2181
KAFKA_BROKER_PORT=9092
KAFKA_BOOTSTRAP_SERVERS=kafka-broker:${KAFKA_BROKER_PORT}

# ======================================
# üîå Microservices Ports
# ======================================
CONTA_SERVICE_PORT=8081
KAFKA_SERVICE_PORT=8082

# ======================================
# üìÅ Caminhos absolutos para GitHub Actions
# ======================================
CONTA_SERVICE_PATH=${GITHUB_WORKSPACE}/conta-service
KAFKA_SERVICE_PATH=${GITHUB_WORKSPACE}/kafka-service
INFRA_PATH=${GITHUB_WORKSPACE}/infra
