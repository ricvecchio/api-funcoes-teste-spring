<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.funcoes</groupId>
    <artifactId>api-funcoes-teste-spring</artifactId>
    <version>1.0.0</version>
    <packaging>pom</packaging>

    <name>API Funções - Projeto Raiz</name>
    <description>Projeto pai que agrega os microserviços Conta e Kafka</description>

    <!-- Definindo os módulos filhos -->
    <modules>
        <module>conta-service</module>
        <module>kafka-service</module>
    </modules>

    <properties>
        <!-- Definindo Java 21 para todos os módulos -->
        <java.version>21</java.version>
        <spring.boot.version>3.3.2</spring.boot.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <!-- Gerenciamento centralizado de dependências Spring Boot -->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-dependencies</artifactId>
                <version>${spring.boot.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <!-- Plugin Spring Boot para todos os módulos -->
                <plugin>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-maven-plugin</artifactId>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
